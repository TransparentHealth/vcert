[ req ]
default_bits            = 2048
default_keyfile         = |PRIVATE_KEY|
default_md              = sha256
prompt                  = no
distinguished_name      = sub_distinguished_name
x509_extensions         = v3_ca

[ sub_ca_distinguished_name ]
countryName             = |COUNTRY|
stateOrProvinceName     = |STATE|
localityName            = |CITY|
0.organizationName      = |ORGANIZATION|
commonName              = |COMMON_NAME|
#emailAddress            = |EMAIL_ADDRESS|

[ v3_ca ]
subjectKeyIdentifier    = hash
subjectAltName          = @alt_names
authorityKeyIdentifier  = keyid:always,issuer:always
basicConstraints        = CA:true
keyUsage                = keyCertSign, cRLSign
crlDistributionPoints   = URI:http://ca.directca.org/crl/ca.directca.org.crl

[alt_names]
DNS.1                   = |COMMON_NAME|

[ ca ]
default_ca              = CA_default


[ policy_match ]
countryName             = match
stateOrProvinceName     = supplied
localityName            = supplied
organizationName        = supplied
organizationalUnitName  = optional
commonName              = supplied
emailAddress            = supplied

[ CA_default ]
dir                     = .
new_certs_dir           = /opt/ca/signed-keys/
database                = |COMPLETED_ANCHOR_DIR|/index
certificate             = |CERTIFICATE|
serial                  = /opt/ca/conf/serial
private_key             = |PRIVATE_KEY|
x509_extensions         = usr_cert
name_opt                = ca_default
cert_opt                = ca_default
default_crl_days        = 1
default_days            = |DAYS|
default_md              = sha256
preserve                = no
policy                  = policy_match



[ usr_cert ]
basicConstraints        = CA:FALSE
subjectAltName          = DNS: |DNS|
subjectKeyIdentifier    = hash
authorityKeyIdentifier  = keyid:always #, issuer:always
keyUsage                = digitalSignature, keyEncipherment
crlDistributionPoints   = URI:http://ca.directca.org/crl/|ANCHORDNS|.crl
authorityInfoAccess     = caIssuers;URI:|AIA-DER|

