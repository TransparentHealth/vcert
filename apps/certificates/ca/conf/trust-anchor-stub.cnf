[ req ]
default_bits            = 4096
default_keyfile         = /opt/ca/private/ca.directca.orgKey.pem
default_md              = sha256
prompt                  = no
distinguished_name      = sub_ca_distinguished_name
x509_extensions         = v3_ca

[ sub_ca_distinguished_name ]
countryName             = |COUNTRY|
stateOrProvinceName     = |STATE|
localityName            = |CITY|
0.organizationName      = |ORGANIZATION|
commonName              = |COMMON_NAME|
#emailAddress            = |EMAIL_ADDRESS|

[ v3_ca ]
subjectKeyIdentifier    = hash
subjectAltName          = @alt_names
authorityKeyIdentifier  = keyid:always,issuer:always
basicConstraints        = critical, CA:true
keyUsage                = critical, keyCertSign, cRLSign
crlDistributionPoints   = URI:http://ca.directca.org/crl/ca.directca.org.crl


[alt_names]
DNS.1                   = ca.directca.org

[ ca ]
default_ca              = CA_default

[ CA_default ]
dir                     = .
new_certs_dir           = /opt/ca/signed-keys/
database                = /opt/ca/conf/index
certificate             = /opt/ca/public/ca.directca.org.pem
serial                  = /opt/ca/conf/serial
private_key             = /opt/ca/private/ca.directca.orgKey.pem
x509_extensions         = usr_cert
name_opt                = ca_default
cert_opt                = ca_default
default_crl_days        = 01
default_days            = |DAYS|
default_md              = sha256
preserve                = no
policy                  = policy_match

[ policy_match ]
countryName             = match
stateOrProvinceName     = supplied
localityName            = supplied
organizationName        = supplied
organizationalUnitName  = optional
commonName              = supplied
emailAddress            = supplied

[ usr_cert ]
basicConstraints        = CA:true
subjectKeyIdentifier    = hash
authorityKeyIdentifier  = keyid ,issuer:always
keyUsage                = digitalSignature, keyCertSign, cRLSign
crlDistributionPoints   = URI:http://ca.directca.org/crl/ca.directca.org.crl
authorityInfoAccess     = caIssuers;URI:|AIA_FOR_TRUST_ANCHORS|

[ crl_ext ]
authorityKeyIdentifier  = keyid:always,issuer:always
